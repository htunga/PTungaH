<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10sp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50sp"
            android:id="@+id/profileCardImage"
            android:layout_margin="4sp">
            <ImageView
                android:layout_width="110sp"
                android:id="@+id/profilePicId"
                android:layout_height="110sp"
                android:src="@drawable/scandals"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_toRightOf="@+id/profileCardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12sp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="item"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/empName"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="Scandals"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/empDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:text="24"/>
                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/empAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:text="White"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/empGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:text="50usd"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discription"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/empLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:text="Made in Korea"/>
                </TableRow>
            </TableLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>